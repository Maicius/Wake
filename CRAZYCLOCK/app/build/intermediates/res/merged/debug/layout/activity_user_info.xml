<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maicius.wake.InterChange.UserInfo"
    android:background="@drawable/ic_background2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="手机号"
        android:id="@+id/tel"
        android:layout_marginTop="38dp"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="昵称"
        android:id="@+id/nickname"
        android:layout_marginTop="37dp"
        android:textSize="24dp"
        android:layout_below="@+id/tel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="个性签名"
        android:id="@+id/brief_intro"
        android:textSize="24dp"
        android:layout_below="@+id/nickname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telephone"
        android:text="111"
        android:textSize="24dp"
        android:layout_above="@+id/nickname"
        android:layout_alignRight="@+id/button_save"
        android:layout_alignEnd="@+id/button_save" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_nickname"
        android:text="111"
        android:textSize="24dp"
        android:layout_alignBottom="@+id/nickname"
        android:layout_alignLeft="@+id/telephone"
        android:layout_alignStart="@+id/telephone" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/brief_intro_text"
        android:textSize="24sp"
        android:hint="快来设置你的个性签名吧"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_login_div_bg"
        android:layout_below="@id/brief_intro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存修改"
        android:id="@+id/button_save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
