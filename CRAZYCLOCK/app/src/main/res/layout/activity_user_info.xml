<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maicius.wake.InterChange.UserInfo"
    android:background="@drawable/ic_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="手机号"
        android:id="@+id/tel"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="67dp"
        android:textSize="24dp"
        android:textColor="#0000FF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="昵称"
        android:id="@+id/nickname"
        android:layout_marginTop="37dp"
        android:textSize="24dp"
        android:textColor="#0000FF"
        android:layout_below="@+id/tel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="个性签名"
        android:id="@+id/brief_intro"
        android:textSize="24dp"
        android:textColor="#0000FF"
        android:layout_below="@+id/nickname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telephone"
        android:text="111"
        android:textColor="#00FF00"
        android:textSize="24dp"
        android:layout_alignTop="@+id/tel"
        android:layout_toRightOf="@+id/brief_intro"
        android:layout_toEndOf="@+id/brief_intro"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_nickname"
        android:textColor="#00FF00"
        android:text="111"
        android:textSize="24dp"
        android:layout_alignTop="@+id/nickname"
        android:layout_alignLeft="@+id/telephone"
        android:layout_alignStart="@+id/telephone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/biref_intro"
        android:textColor="#00FF00"
        android:textSize="24dp"
        android:layout_alignTop="@+id/brief_intro"
        android:layout_alignLeft="@+id/info_nickname"
        android:layout_alignStart="@+id/info_nickname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存修改"
        android:id="@+id/button_save"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/biref_intro"
        android:layout_alignEnd="@+id/biref_intro" />
</RelativeLayout>
